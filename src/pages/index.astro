---
import Layout from "../layouts/Default.astro";
---

<Layout title="Viktor Persson (vikpe)">
  <div
    id="app-hero"
    class="p-6 my-10 text-gray-300/80 border-4 border-white/10"
  >
    <div class="flex items-center space-x-4">
      <img
        src="/assets/img/sun.png"
        alt="Synthwave sun"
        width="80"
        height="80"
        class="opacity-70 w-16 sm:w-20"
      />
      <div class="space-y-1">
        <h1 class="text-3xl">Hello World</h1>
        <p class="app-text-glow">I'm Viktor Persson aka vikpe.</p>
      </div>
    </div>
  </div>

  <p class="app-text-glow">Stuff that currently occupy my time</p>

  <div class="app-link-list">
    <a href="https://github.com/vikpe" rel="nofollow">
      <img
        src="/assets/img/icons/github.svg"
        width="72"
        height="32"
        alt="GitHub"
      />
      Open Source
    </a>

    <a href="https://godotengine.org/" rel="nofollow">
      <img
        src="/assets/img/godot_logo.svg"
        width="72"
        height="32"
        alt="Godot"
      />
      Indie game development
    </a>

    <a href="https://www.retro-synthwave.com/" rel="nofollow">
      <img
        src="/assets/img/icons/triangle.svg"
        width="72"
        height="32"
        alt="Synthwave"
      />
      Synthwave art/music
    </a>

    <a href="https://arcsin.se/">
      <img
        src="/assets/img/arcsin_logo.svg"
        width="72"
        height="18"
        alt="Arcsin"
      />
      My company
    </a>
  </div>

  <div class="my-12 h-px bg-blue-400/30"></div>

  <h2 class="text-3xl">Archive</h2>
  <p class="app-text-glow my-2">Idle/legacy projects.</p>

  <div class="app-link-list">
    <a
      href="https://vikpe.org/archive/arcsin-web-templates/"
      class="saturate-0 hover:saturate-100"
    >
      <img
        src="/assets/img/arcsin_web_templates_logo.svg"
        width="192"
        height="17"
        alt="Arcsin Web Templates"
      />
      <span class="hidden sm:inline text-sm">
        Free website templates and WordPress themes
      </span>
    </a>
  </div>
</Layout>
